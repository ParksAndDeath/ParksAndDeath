
@{
    ViewData["Title"] = "GetScheduledParks";
}

<h1>Scheduled Parks</h1>

@model List<UserParks>


<style>
    body {
        background-image: url(https://www.wallpaperup.com/uploads/wallpapers/2014/04/17/336002/5b8931c743ca2bfb3fa4e10bad59efbb-1000.jpg);
        background-repeat: no-repeat;
    }

    h1 {
        font-family: Cooper;
        font-weight: bold;
        font-size: 75px;
        text-align: center;
        font-family: Cooper;
        color: #59128e;
        text-align: center;
    }


    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    tr:nth-child(odd) {
        background-color: #e9d8f2
    }

    th {
        text-align: center;
        background-color: #659EC7;
        color: white;
    }

    .text-center {
        display: table;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .text-center-container {
        display: table-cell;
        width: 100%;
        vertical-align: middle;
    }

    .text-center-box {
        display: inline-block;
        padding: 50px;
        background-color: #ffffffff;
    }
</style>


        <h1>@ViewBag.deleteSomeParks</h1>

        <div style="font-family:Arial">
            <table class="table">
                <tr>
                    <th>Park Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Web Address</th>
                    <th>Mark As Visited</th>
                </tr>
                @foreach (UserParks parks in Model)
                {
                    <tr>
                        <td>@parks.ParkName</td>
                        <td>@parks.City</td>
                        <td>@parks.State</td>
                        <td><a href="@parks.Url">@parks.Url</a></td>

                        <td>
                            <a class="btn btn-outline-primary" href="../ParksDb/UpdateParkVisited?id=@parks.UsersParkIds">Cross Off</a>

                        </td>
                    </tr>
                }
            </table>
        </div>
