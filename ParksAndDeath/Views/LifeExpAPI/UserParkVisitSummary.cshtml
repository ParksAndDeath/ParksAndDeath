
@{
    ViewData["Title"] = "UserParkVisitSummary";
}

@model ParksSummaryWithUserPrefs

<h1>SELECT FROM THE AVAILABLE DATE BELOW FOR EACH PARK</h1>


<table>
        <tr>
            <th>Park Name</th>
            <th>Park City</th>
            <th>Park State</th>
            <th>Specify a Date</th>
        </tr>
    @foreach (UserParks park in Model.bucketedParks)
    {
    <tr>
        <td><input type="text" name="ParkName" value=@park.ParkName readonly /></td>
        <td><input type="text" name="City" value=@park.City readonly /></td>
        <td><input type="text" name="ParkState" value=@park.State readonly /></td>
        <td>
            <select>
                @foreach (DateTime date in Model.listOfDateTimes)
                {
                    <option value=@date>@date</option>
                }
            </select>
        </td>
        <td><a href="../LifeExpAPI/MarkAsScheduled?id=@park.UsersParkIds">Mark as Scheduled</a></td>
    </tr>
    }
    </table>

