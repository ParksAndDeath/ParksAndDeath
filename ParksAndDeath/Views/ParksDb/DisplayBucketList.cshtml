
@{
    ViewData["Title"] = "DisplayBucketList";
}
@model List<UserParks>


<style>
    body {
        background-image: url(https://www.elsetge.cat/myimg/f/196-1969978_national-park-desktop-wallpaper-high-resolution-free-national.jpg);
        background-repeat: no-repeat;
    }

    h1 {
        font-family: Cooper;
        font-weight: bold;
        font-size: 75px;
        color: brown;
        text-align: center;
    }

    .text-center {
        display: table;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .text-center-container {
        display: table-cell;
        width: 100%;
        vertical-align: middle;
    }

    .text-center-box {
        display: inline-block;
        padding: 50px;
        background-color: #ffffffff;
    }
        font-weight: bold;
        font-size: 75px;
        font-family: Arial;
        color: brown;
        text-align: center;
 
</style>

<h1>Bucket List</h1>

<div style="font-family:Arial">
    <table class="table table-hover table-dark">
    <tr>
        <th>Park Name</th>
        <th>City</th>
        <th>State</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Web Address</th>

    </tr>
    @foreach (UserParks parks in Model)
    {
        <tr>
            <td>@parks.ParkName</td>
            <td>@parks.City</td>
            <td>@parks.State</td>
            <td>@parks.Latitude</td>
            <td>@parks.Longitude</td>
            <td><a href="@parks.Url">@parks.Url</a></td>

            <td>
                <a href="../ParksDb/UpdateParkVisited?id=@parks.UsersParkIds">Cross Off Bucket List</a>

            </td>

        </tr>
    }
</table>
    <a href="../User/UserPreferences">Setup Visit Plan for this List of Parks</a>
</div>

