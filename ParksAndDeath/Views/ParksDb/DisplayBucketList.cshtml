
@{
    ViewData["Title"] = "DisplayBucketList";
}
@model List<UserParks>


<style>
    body {
        background-image: url(https://www.elsetge.cat/myimg/f/196-1969978_national-park-desktop-wallpaper-high-resolution-free-national.jpg);
        background-repeat: no-repeat;
    }

    h1 {
        background-color: #0094ff;
        font-family: Cooper;
        color: white;
        text-align: center;
    }

    th, td {
    text-align: left;
    padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }
    tr:nth-child(odd) {
        background-color: #ECE5B6
    }

    th {
        text-align: center;
        background-color: #659EC7;
        color: white;

    }

    .text-center {
        display: table;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .text-center-container {
        display: table-cell;
        width: 100%;
        vertical-align: middle;
    }

    .text-center-box {
        display: inline-block;
        padding: 50px;
        background-color: #ffffffff;
    }
   
</style>

<h1>@ViewBag.deleteSomeParks</h1>

<div style="font-family:Arial">
    <table class="table">
    <tr>
        <th>Park Name</th>
        <th>City</th>
        <th>State</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Web Address</th>
        <th>Cross off Bucket List</th>
        <th>Remove from List</th>

    </tr>
    @foreach (UserParks parks in Model)
    {
        <tr>
            <td>@parks.ParkName</td>
            <td>@parks.City</td>
            <td>@parks.State</td>
            <td>@parks.Latitude</td>
            <td>@parks.Longitude</td>
            <td><a href="@parks.Url">@parks.Url</a></td>

            <td>
                <a class="btn btn-outline-primary" href="../ParksDb/UpdateParkVisited?id=@parks.UsersParkIds">Cross Off</a>

            </td>
            <td>
                <a class="btn btn-outline-primary" href="../ParksDb/RemoveFromBucketList?id=@parks.UsersParkIds">Remove</a>
            </td>
        </tr>
    }
</table>
    <a class="btn btn-danger"href="../User/UserPreferences">Setup Visit Plan for this List of Parks</a>
</div>

