
@{
    ViewData["Title"] = "AddUserInput";
}

<h1>AddUserInput</h1>

<form action="../User/AddUserInput" method="post">
    <input type="text" name="Name" value="" /><br />
    Your Name: <input type="text" name="name" value="" />
    Your DOB: <input type="date" name="name" value="" />
    @Html.DropDownList("Select Gender", new SelectList(Enum.GetValues(typeof(Sex))),
"Select Gender", new { @class = "form-control" })<br />
    Smoker: <input type="radio" name="Smoker" value="true" /><br />
    <input type="hidden" name="Smoker" value="false" />
    Drinker: <input type="radio" name="Drinker" value="true" /><br />
    <input type="hidden" name="Drinker" value="false" /><br />
    <input type="submit" name="name" value="Add User Information" />
</form>